@model Kino.Models.Dtos.Genre.CreateGenreDto
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
      <form asp-controller="Genres" asp-action="Create" method="post" enctype="multipart/form-data">
          <div class="form-group mb-3">
              <label asp-for="Name">Название жанра</label>
              <input asp-for="Name" class="form-control" placeholder="Name">
          </div>
          <div class="form-group mb-4">
              <label asp-for="ImagePath">Файл</label>
              <input type="file" class="form-control" asp-for="ImagePath">
          </div>
          
          <button type="submit" class="btn btn-primary mt-3">Сохранить</button>
      </form>
</div>
</body>
</html>